<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitulo"
                android:text="Datos personales"
                android:textColor="@color/primary"
                android:textSize="28sp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Nombre: "
                    android:textStyle="bold"
                    android:layout_weight="0.2"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/etNombre"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:hint="   Ingrese su nombre"
                    android:background="@color/primary_light"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Apellido: "
                    android:textStyle="bold"
                    android:layout_weight="0.2"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/etApellido"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:hint="   Ingrese su apellido"
                    android:background="@color/primary_light"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Direccion:"
                    android:textStyle="bold"
                    android:layout_weight="0.2"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/etDireccion"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:hint="   Ingrese su direccion"
                    android:background="@color/primary_light"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Ciudad: "
                    android:textStyle="bold"
                    android:layout_weight="0.2"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/etCiudad"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:hint="   Ingrese su ciudad"
                    android:background="@color/primary_light"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Pais: "
                    android:textStyle="bold"
                    android:layout_weight="0.2"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/etPais"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:hint="   Ingrese su pais"
                    android:background="@color/primary_light"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="C postal: "
                    android:textStyle="bold"
                    android:layout_weight="0.2"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/etDirPostal"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:hint="   Ingrese su codigo"
                    android:background="@color/primary_light"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textPostalAddress"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Telefono: "
                    android:textStyle="bold"
                    android:layout_weight="0.2"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/etTelefono"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:hint="   Ingrese su numero"
                    android:background="@color/primary_light"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="text|phone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="E-mail: "
                    android:textStyle="bold"
                    android:layout_weight="0.2"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/etEmail"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:hint="   Ingrese su correo"
                    android:background="@color/primary_light"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:textSize="20sp"
                android:id="@+id/btnEnviar"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="90dp"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>